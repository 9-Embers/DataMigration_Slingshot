<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Slingshot.Onrealm.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="StratusWeb Cookie" Margin="30,0" />
            <Editor x:Name="Token" Margin="30,-20" />

            <Label Text="Load From Files (uncheck to load new data)" Margin="30,20,0,0" />
            <CheckBox x:Name="FromFiles" Margin="30,-20"/>

            <Button
                x:Name="CounterBtn"
                Text="RUN"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
